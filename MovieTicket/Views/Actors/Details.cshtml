
@model Actor

@{
    ViewData["Title"] = "Actor details";
}

<div style="background-color: #18122B">
    <div class="row text">
        <div class="col-md-8 offset-2 text-white" stylr="background-color: #18122B">
            <p>
                <h1>
                    Details for @Model.FullName
                </h1>
            </p>
            <div class="col-md-8 offset-2 text-white" style="background-color: #18122B">
               
                  
                    <div class="form-group text-center">
                    <img class="border-info rounded-square" style="max-width: 150px" id="ProfilePicturePreview" />
                    </div>
                    <div class=" form-group text-white">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control"  readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-dandger"></span>

                    </div>
                    <div class=" form-group text-white" style="background-color: #18122B">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-dandger"></span>

                    </div>
                    <div class=" form-group text-white" style="background-color: #18122B">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" readonly/>
                        <span asp-validation-for="Bio" class="text-dandger"></span>

                    </div>

                    <div class="form-group text-white" style="background-color: #18122B">

                   
                    <a class="btn btn-outline-secondary" asp-action="Index" style="margin-top:5px">Show All</a>

                    </div>
               </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
            $(document).ready(function)(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}