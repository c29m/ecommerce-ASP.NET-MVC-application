@model Actor

@{
    ViewData["Title"] = "Update actor";
}

<div style="background-color: #18122B">
    <div class="row text">
        <div class="col-md-8 offset-2 text-white" stylr="background-color: #18122B">
            <p>
                <h1>
                    Update Actor
                </h1>
            </p>
            <div class="col-md-8 offset-2 text-white" style="background-color: #18122B">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-2" style="max-width: 150px" />
                    </div>
                    <div class=" form-group text-white">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-dandger"></span>

                    </div>
                    <div class=" form-group text-white" style="background-color: #18122B">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-dandger"></span>

                    </div>
                    <div class=" form-group text-white" style="background-color: #18122B">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-dandger"></span>

                    </div>

                    <div class="form-group text-white" style="background-color: #18122B">
                        <input type="submit" style="margin-top: 5px" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index" style="margin-top: 5px">Show All</a>

                    </div>
                </form>
            </div>
        </div>
     </div>
</div>

@section Scripts{
    <script>
        
        $(document).ready(function)(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").om("change", function (){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}