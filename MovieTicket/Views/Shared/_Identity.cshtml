@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="class=" btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Register" style="margin-left: 5px">
        <i class="bi bi-person-plus"></i> Register
    </a>

    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login" style="margin-left: 5px">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
}
else{
    <div class="dropdown text-white" style="margin-left: 5px">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown" area-expanded="false">
            <i class="bi bi-person-badge"></i> Hello User
        </button>

        <ul class="dropdown-menu" area-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                    <i class="bi bg-list" />Orders
                </a>
            </li>
            @if(User.IsInRole("Admin")){
                <li>
                    <a class="dropdown-item" asp-action="Account" asp-action = "Users">
                        <i class="bi bi-people"></i> Users
                    </a>
                </li>
            }
        </ul>
    </div>

    <form asp-controller="Account" asp-action="Logout" style="padding-left:5px">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Log out
        </button>
    </form>
}

                   


