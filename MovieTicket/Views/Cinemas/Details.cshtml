@model Cinema

@{
    ViewData["Title"] = "Details of a cinema";
}

<div style="background-color: #18122B">
    <div class="row text">
        <div class="col-md-8 offset-2 text-white" stylr="background-color: #18122B">
            <p>
                <h1>
                    Details for @Model.Name
                </h1>
            </p>
            <div class="col-md-8 offset-2 text-white" style="background-color: #18122B">


                <div class="form-group text-center">
                    <img class="border-info rounded-square" style="max-width: 150px" id="LogoPreview" />
                </div>
                <div class=" form-group text-white">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <span asp-validation-for="Logo" class="text-dandger"></span>

                </div>
                <div class=" form-group text-white" style="background-color: #18122B">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-dandger"></span>

                </div>
                <div class=" form-group text-white" style="background-color: #18122B">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-dandger"></span>

                </div>

                <div class="form-group text-white" style="background-color: #18122B">


                    <a class="btn btn-outline-secondary" asp-action="Index" style="margin-top:5px">Show All</a>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function)(){
            var output = document.getElementById('LogoPreview');
            output.src = $("#logo").val();
        })
    </script>
}